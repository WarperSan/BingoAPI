{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet-format",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [
        "format",
        "BingoAPI.sln",
        "--include",
        "${staged}"
      ],
      "include": [
        "**/*.cs"
      ]
    }
  ]
}
